{
  "manifest_version": 3,
  "name": "Hell „ÅÆ Translator",
  "version": "1.1",
  "description": "A Chrome extension for translating text using DeepL API",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www2.deepl.com/*"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "katex/katex.min.css",
        "styles.css"
      ],
      "js": [
        "markdown-it.min.js",
        "katex/katex.min.js",
        "katex/contrib/auto-render.min.js",
        "popup.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "fonts/*",
        "katex/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 